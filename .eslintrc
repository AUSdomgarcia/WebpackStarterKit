---
extends: eslint:recommended
parserOptions:
  sourceType: "module"
  ecmaFeatures:
    modules: true

env:
  es6: true
  browser: true
  node: true

rules:
  semi: [2, "always"]
  quotes: [2, "single"]
  no-unused-vars: [0]
  no-console: [0, "never"]
  strict: [0, "function"]
  constructor-super: [0]